<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:background="@drawable/notebook_background"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register to  Notemates..."
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/register_error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/email"
        android:layout_marginTop="38dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="First name"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fname"
        android:layout_below="@+id/fname"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Last Name"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/uname"
        android:layout_below="@+id/uname"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/uname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lname"
        android:layout_below="@+id/lname"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Username"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="italic" >

        <requestFocus />
    </EditText>
    <EditText
        android:id="@+id/pword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_below="@+id/email"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="italic" />
   
    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pword"
        android:layout_below="@+id/register_error"
        android:text="Register"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/bktologin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register"
        android:layout_centerHorizontal="true"
        android:text="Back To Login"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold|italic" />
</LinearLayout>